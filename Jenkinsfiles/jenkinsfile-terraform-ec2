pipeline {
  agent any
  stages {
    stage ('Codechekout') {
      steps {
        checkout scm
      }
    }
    stage('Terraform') {
      steps {
        script {
          def workspacePath = "/var/lib/jenkins/workspace/${JOB_NAME}/Terraform-Project/ec2/"
          withEnv(["Instance_Type=${params.Instance_Type}"]) {
            dir(workspacePath) {
              sh "terraform init"
              sleep 20
              sh "terraform apply -var Instance_Type=${Instance_Type} -auto-approve"
            }
          }
        }
      }
    }
    stage ('Output') {
      steps {
        echo "${Instance_Type} has successfully been created"
      }
    }
  }
}
